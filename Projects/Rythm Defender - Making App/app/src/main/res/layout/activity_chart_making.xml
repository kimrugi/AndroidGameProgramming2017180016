<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ChartMakingActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <kr.ac.tukorea.androidgameproject.n2017180016.rythmdefender.framework.GameView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="start"
            android:onClick="onStartButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="pause"
            android:onClick="onPauseButton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="bit"
            android:onClick="onBitButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="arrow"
            android:onClick="onArrowButton"/>

        <EditText
            android:id="@+id/BPSEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="bit per second"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="finish &amp; save"
            android:onClick="onFinishButton"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <SeekBar
            android:id="@+id/musicSeekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="1000"
            />
    </LinearLayout>
</LinearLayout>